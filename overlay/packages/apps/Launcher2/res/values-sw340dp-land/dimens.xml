<resources>
<!-- Workspace padding -->
    <dimen name="workspace_top_padding_land">25dp</dimen>
    <dimen name="workspace_left_padding_land">0dp</dimen>
    <dimen name="workspace_right_padding_land">0dp</dimen>
    <dimen name="workspace_bottom_padding_land">68dp</dimen>

<!-- CellLayout padding -->
    <dimen name="cell_layout_top_padding_land">1dp</dimen>
    <dimen name="cell_layout_left_padding_land">1dp</dimen>
    <dimen name="cell_layout_right_padding_land">1dp</dimen>
    <dimen name="cell_layout_bottom_padding_land">1dp</dimen>

<!-- Workspace cell size -->
    <dimen name="workspace_cell_width_land">78dp</dimen>
    <dimen name="workspace_cell_height_land">82dp</dimen>
    <dimen name="workspace_width_gap_land">1dp</dimen>
    <dimen name="workspace_height_gap_land">1dp</dimen>

<!-- Hotseat -->
    <dimen name="hotseat_cell_width">64dp</dimen>
    <dimen name="hotseat_cell_height">58dp</dimen>
    <dimen name="hotseat_width_gap">28dp</dimen>
    <dimen name="hotseat_height_gap">-1dp</dimen>

<!-- height of the bottom row of controls -->
    <dimen name="button_bar_height">66dip</dimen>
    <dimen name="button_bar_height_plus_padding">68dp</dimen>


<!-- Clings -->
    <dimen name="folderClingMarginTop">50dp</dimen>

<!-- Workspace -->
    <!-- These two values define the left and right margins for the dock divider bar -->
    <dimen name="workspace_divider_padding_left">40dp</dimen>
    <dimen name="workspace_divider_padding_right">40dp</dimen>
    <dimen name="workspace_divider_padding_top">0dp</dimen>
    <dimen name="workspace_divider_padding_bottom">0dp</dimen>

    <!-- If this is any greater than 32dp, the text will appear below the status bar when you start dragging -->
    <dimen name="qsb_bar_height">32dp</dimen>

<!-- Drag padding to add to the bottom of drop targets -->
    <dimen name="drop_target_drag_padding">20dp</dimen>


<!-- Because portal animations go beyond the bounds of an icon, we need
     to make the dock layout slightly larger than the button_bar_height -->
    <dimen name="button_bar_height_top_padding">4dp</dimen>
    <dimen name="button_bar_height_bottom_padding">4dp</dimen>
    <dimen name="button_bar_width_left_padding">0dp</dimen>
    <dimen name="button_bar_width_right_padding">0dp</dimen>

    <dimen name="app_icon_drawable_padding_land">3dp</dimen>
    <dimen name="app_icon_padding_top">4dp</dimen>

<!-- The height of the tab bar - if this changes, we should update the
     external icon width/height above to compensate -->
    <dimen name="apps_customize_tab_bar_height">44dp</dimen>
    <dimen name="apps_customize_tab_bar_margin_top">25dp</dimen>

<!-- The width can be 72dp because we don't have L/R padding -->
    <dimen name="apps_customize_cell_width">74dp</dimen>
    <dimen name="apps_customize_cell_height">89dp</dimen>
    <dimen name="apps_customize_max_gap">18dp</dimen>
    <dimen name="apps_customize_widget_cell_width_gap">10dp</dimen>
    <dimen name="apps_customize_widget_cell_height_gap">8dp</dimen>

<!-- Padding applied to AppWidget previews -->
    <dimen name="app_widget_preview_padding_left">8dp</dimen>
    <dimen name="app_widget_preview_padding_right">8dp</dimen>
    <dimen name="app_widget_preview_padding_top">8dp</dimen>
    <dimen name="app_widget_preview_label_margin_top">4dp</dimen>
    <dimen name="app_widget_preview_label_margin_left">2dp</dimen>
    <dimen name="app_widget_preview_label_margin_right">2dp</dimen>

<!-- QSB -->
    <dimen name="toolbar_button_vertical_padding">8dip</dimen>
    <dimen name="toolbar_button_horizontal_padding">8dip</dimen>

<!-- Folders -->
    <!-- The size of the image which sits behind the preview of the folder contents -->
    <dimen name="folder_preview_size">58dp</dimen>

</resources>
